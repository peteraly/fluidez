      {
        "ending": "-cito/-cita",
        "use": "after -n, -r, -e",
        "examples": "corazoncito, amorcito, pobrecito"
      },
      {
        "ending": "-illo/-illa",
        "use": "common in Spain",
        "examples": "chiquillo, cigarrillo"
      },
      {
        "ending": "-ico/-ica",
        "use": "Colombia, Costa Rica, Cuba",
        "examples": "momentico, ratico"
      }
    ],
    "augmentatives": [
      {
        "ending": "-ón/-ona",
        "use": "big/emphasize",
        "examples": "casón (big house), solterón (confirmed bachelor)"
      },
      {
        "ending": "-ote/-ota",
        "use": "big (sometimes pejorative)",
        "examples": "grandote, palabrota (swear word)"
      },
      {
        "ending": "-azo/-aza",
        "use": "blow/big/impressive",
        "examples": "golpazo (big hit), cochazo (great car)"
      }
    ],
    "tip": "Diminutives express affection, not just size! 'Ahorita' = right now (not small now)"
  },
